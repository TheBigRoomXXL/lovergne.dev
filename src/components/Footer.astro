---
import { siteConfig } from "src/site.config";
let currentPath = Astro.url.pathname;
if (currentPath === "/") {
  currentPath = "/index";
}
if (currentPath.endsWith("/")) {
  currentPath = currentPath.slice(0, -1);
}
---

<footer>
  <hr />
  <div class="container">
    <nav class="horizontal-list social">
      {
        siteConfig.socialLinks.map(({ name, url }) => (
          <a href={url} target="_blank">
            <wbr />
            {name}
          </a>
        ))
      }
    </nav>

    <nav class="ascii">
      <a href=`${currentPath}.txt`>Hey, want some ASCII?</a>
    </nav>

    <nav class="horizontal-list menu">
      {
        siteConfig.menuLinks.map(({ name, url }) => (
          <a href={url}>
            <wbr />
            {name}
          </a>
        ))
      }
    </nav>
  </div>
</footer>

<style>
  .container {
    display: flex;
    flex-direction: column-reverse;
    justify-content: space-between;
    gap: 1rem;
    margin: 1em;
  }

  @media (min-width: 640px) {
    .container {
      flex-direction: row;
    }
  }

  nav.social > a {
    color: var(--color-primary);
  }

  nav.menu > a {
    color: var(--color-secondary);
  }

  .ascii {
    font-family: "Courier New", Courier, monospace;
  }
</style>
