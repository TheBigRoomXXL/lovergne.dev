---
import { siteConfig } from "src/site.config";
---

<header>
  <nav>
    <a href="/" tabindex="-1">
      <img src="/icon.svg" alt="Logo with the letters SL" class="logo" />
    </a>

    <div class="menu">
      <a href="/">
        <h1 class="title">
          {siteConfig.title}
        </h1>
      </a>
      <div class="horizontal-list">
        {
          siteConfig.menuLinks.map(({ name, url }) => (
            <a href={url} rel="prefetch">
              <wbr />
              {name}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
  <hr />
</header>

<style>
  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 1rem 0 1rem 0;
  }

  a {
    text-decoration: none;
  }

  .logo {
    height: 6rem;
    width: 6rem;
    aspect-ratio: 1/1;
    margin-right: 1rem;
  }

  .menu {
    display: block;
    line-height: 1.25em;
  }

  .title {
    color: var(--color-primary);
    font-size: 2rem;
    margin: 0;
  }

  .title,
  .horizontal-list {
    text-align: center;
  }

  .horizontal-list > a {
    font-size: 1.1rem;
    padding: 0.25em 0;
    color: var(--color-secondary);
  }

  @media (prefers-color-scheme: light) {
    /* primary is darker than I would like in light mode to preserve contrast
        for accessibility. But because title is big it can be lighten*/
    .title {
      filter: brightness(140%);
    }
  }

  @media (min-width: 500px) {
    nav {
      flex-direction: row;
      align-content: center;
    }
    .title,
    .horizontal-list {
      text-align: left;
    }
  }
</style>
